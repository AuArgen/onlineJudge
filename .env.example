# Application Configuration
APP_NAME="Online Judge"
APP_PORT=8000
FRONTEND_PORT=3000 # New variable

# Database Configuration (PostgreSQL)
# DB_HOST is the service name in docker-compose (usually 'db')
DB_HOST=db
# DB_PORT is the internal port inside the container (usually 5432)
DB_PORT=5432
# DB_EXTERNAL_PORT is the port exposed to the host machine (e.g., 5433 to avoid conflict with local postgres)
DB_EXTERNAL_PORT=5433

DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=onlinejudge

# Google OAuth Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"
GOOGLE_REDIRECT_URI="http://localhost:8000/api/auth/google/callback" # Updated for new API path

# Session Key (Optional, for future use)
SESSION_KEY="your_random_session_key_here"

# Initial Admin Email (Optional)
ADMIN_EMAIL="your_email@gmail.com"

# JWT Secret
JWT_SECRET="your_jwt_secret_here"
